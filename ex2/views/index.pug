extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Registos [Nº de Registos: #{rlist.length}] 
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado  
          th Número de intervenções
        
        each r in rlist
          tr
            td
              a(href="/"+r._id)= r._id
            td= r.Freguesia
            td
              a(href="/especies/"+r.Espécie)= r.Espécie
            td= r.Estado
            td= r["Número de intervenções"]
              
    footer.w3-container.w3-teal
      h5 Generated for Exame by Gonçalo Braga(A97541) #{d}
    