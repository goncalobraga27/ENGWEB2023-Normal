extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
        each reg,index in r
            if index === 0  
                h1 #{reg["Espécie"]} [#{reg["Nome Científico"]}] #[a(href="/") VOLTAR]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado  
          th Número de intervenções
        
        each reg in r
         tr
            td= reg._id
            td= reg.Freguesia
            td= reg.Espécie
            td= reg.Estado
            td= reg["Número de intervenções"]
              
    footer.w3-container.w3-teal
      h5 Generated for Exame by Gonçalo Braga(A97541) #{d}
    